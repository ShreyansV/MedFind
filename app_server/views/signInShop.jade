extends layout

block navigator
  form.form-horizontal(action='', method='post', role='form')
    - if(error='val')
      .alert.alert-danger(role='alert') Error!!

    .form-group
      label.col-xs-3.control-label(for='name') Name
      .col-xs-7
        input#name.form-control(name='name')

    .form-group
      label.col-xs-3.control-label(for='password') Password
      .col-xs-7
        input#password.form-control(name='password', type='password')

    .form-group
      label.col-xs-3.control-label(for='email') Email
      .col-xs-7
        input#email.form-control(name='email')

    .form-group
      label.col-xs-3.control-label(for='address') Address
      .col-xs-7
        input#address.form-control(name='address', multiple)

    .form-group
      label.col-xs-3.control-label(for='facilities') Facilities
      .col-xs-7
        input#facilities.form-control(name='facilities', multiple)

    .form-group
      label.col-xs-3.control-label(for='coords') Choose your Location
      .col-xs-7
        input#coords.form-control(name='coords')

    .form-group
      label.col-xs-3.control-label(for='licence') Shop Licence
      .col-xs-7
        input#licence.form-control(name='licence')

    .form-group
      label.col-xs-3.control-label(for='owners') Shop Owners
      .col-xs-7
        input#owners.form-control(name='owners', multiple)

    button.btn.btn-default.pull-right(name='signInShop') SignUp
